@import "/dist/common/index.wxss";

.sort {
  display: flex;
  /* // justify-content: space-around; */
}

.sort-item {
  height: 50px;
  /* background-color: grey; */
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.sort-item text {
  height: 30px;
  flex-grow: 1;
  text-align: center;
  vertical-align: middle;
  line-height: 30px;
  font-size: 30rpx;
}

.products-view {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.products-view .product-view {
  background-color: white;
  margin-top: 25rpx;
  width: 47%;
}

.product-view .product-image {
  width: 100%;
  height: 450rpx;
  background-size: cover;
  background-position: center;
}

.product-text-view text {
  display: block;
}

.product-text-view {
  padding: 12rpx 20rpx 15rpx 12rpx;
}

.product-text-view .product-name {
  font-size: 30rpx;
  color: #535353;
}

.product-text-view .product-desc {
  font-size: 25rpx;
  color: #bcbcbc;
  padding-top: 5rpx;
  /* height: 68rpx;
  overflow: hidden;
  text-overflow: ellipsis; */
}

.product-text-view .product-price {
  font-size: 32rpx;
  color: #d74848;
  padding-top: 20rpx;
}